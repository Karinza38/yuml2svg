{
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "script"
  },
  "extends": ["plugin:prettier/recommended"],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": ["error", "always"],
    "no-throw-literal": "error",
    "prefer-const": "warn",
    "strict": ["error", "global"]
  }
}
